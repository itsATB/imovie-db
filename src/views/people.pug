html
	head
		title People Search
		link(href='https://fonts.googleapis.com/css?family=Raleway&display=swap' rel='stylesheet')
	style 
		include ./css/people.css
body
	include ./partials/header.pug
	div
		h2 Search for People 
		br
		form(action="/people" method="get")
			input(type="text" name="peopleSearch")
			button.search Search
		br
		
		each person in people
			a(href="/people/" + person.ID) #{person.name}
			br

		br
		
		if current > 1
			- let url = "/people?page=" + (current-1)
			- if(qstring.length > 0){ url += "&" + qstring; }
			a(href=url) Previous
			| 
		- url = "/people?page=" + (current+1)
		- if(qstring.length > 0){ url += "&" + qstring; }
		a(href=url) Next